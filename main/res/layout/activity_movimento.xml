<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Movimento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/etFunc"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textSize="20sp" />
        <!-- android:inputType="text caso voltar para editText -->

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text=""
            android:textSize="18sp"
            android:visibility="invisible" />


        <RadioGroup
            android:id="@+id/rg_despesas"
            android:layout_width="313dp"
            android:layout_height="188dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbAlim"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Alimentação" />

            <RadioButton
                android:id="@+id/rbComb"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Combustível" />

            <RadioButton
                android:id="@+id/rbEstacionamento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Estacionamento" />

            <RadioButton
                android:id="@+id/rbHospedagem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Hospedagem" />

            <RadioButton
                android:id="@+id/rbOutros"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Outros" />

            <RadioButton
                android:id="@+id/rbPedagio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="getSelectedRadioButton"
                android:text="Pedágio" />

        </RadioGroup>

        <EditText
            android:id="@+id/etValorDesp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Valor da Despesa: "
            android:inputType="number"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/etValorKm"
            android:layout_width="match_parent"
            android:layout_height="42dp"

            android:hint="Valor Km: "
            android:inputType="number"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etObs"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Obs: "
            android:inputType="text"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Selecionar data"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="25dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/in_date"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:gravity="center" />

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnInsertMov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnEnviarMovimento"
                android:text="Enviar" />

            <Space
                android:layout_width="25dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btnGuardaMov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnGuardarMovimento"
                android:text="Guardar" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>